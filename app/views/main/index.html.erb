<div class="container">
  <h1>로또 번호 추천</h1>
  <p>자주 등장한 번호를 기반으로 추출된 5개의 번호입니다.</p>
  <div id="lottoNumbers"></div>
  <button onclick="generateLottoNumbers()">새 번호 생성</button>
</div>

<script>
	// 자주 나온 번호 데이터 (예시)
	const frequentNumbers = [1, 3, 5, 9, 12, 23, 25, 31, 33, 42];

	// 로또 번호 생성 함수
	function generateLottoNumbers() {
		const numbersContainer = document.getElementById('lottoNumbers');
		numbersContainer.innerHTML = ''; // 이전 번호 초기화

		const selectedNumbers = [];

		// 자주 나온 번호에서 5개 랜덤 추출
		while (selectedNumbers.length < 5) {
			const randomIndex = Math.floor(Math.random() * frequentNumbers.length);
			const randomNumber = frequentNumbers[randomIndex];

			if (!selectedNumbers.includes(randomNumber)) {
				selectedNumbers.push(randomNumber);
			}
		}

		// 번호 표시
		selectedNumbers.forEach(number => {
			const numberElement = document.createElement('div');
			numberElement.className = 'number';
			numberElement.textContent = number;
			numbersContainer.appendChild(numberElement);
		});
	}

	// 페이지 로드 시 초기 번호 생성
	window.onload = generateLottoNumbers;
</script>